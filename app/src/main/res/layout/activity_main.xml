<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/mainmenubg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/title_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/button_start"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_button"
            android:src="@drawable/btn_pressed"
            android:scaleType="fitXY"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="47dp"
            android:layout_alignLeft="@+id/text_start"
            android:layout_alignStart="@+id/text_start"
            android:layout_alignRight="@+id/text_start"
            android:layout_alignEnd="@+id/text_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/start_game"
            android:id="@+id/text_start"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/image_button"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
